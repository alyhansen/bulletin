

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <!-- Validation failure messages -->

      <% if @comment.errors.any? %>
        <% @comment.errors.full_messages.each do |message| %>
          <div class="alert alert-dismissable alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <%= message %>
          </div>
        <% end %>
      <% end %>

      <form action="/buildings/<%= @comment.building_id %>/posts/<%= @comment.post_id %>/update_comment/<%= @comment.id %>" method="post" class="form-horizontal">
        <!-- Hidden input for authenticity token to protect from forgery -->
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

        <!-- Label and input for content -->
        <div class="form-group">
          <div>
            <textarea id="content" name="content" placeholder="Content" class="form-control" rows="4"><%= @comment.content %></textarea>
          </div>
        </div>

        <div class="form-group">
          <center>
            <button class="btn btn-warning">
              Update Comment
            </button>
          </center>
        </div>
      </form>


    </div>
  </div>
</div>
