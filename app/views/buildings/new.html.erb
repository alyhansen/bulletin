
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">

      <!-- Validation failure messages -->

      <% if @building.errors.any? %>
        <% @building.errors.full_messages.each do |message| %>
          <div class="alert alert-dismissable alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <%= message %>
          </div>
        <% end %>
      <% end %>

      <h2 class="text-center">Add building to network</h2>

      <h4 class="text-center">Are you the property manager for a high-rise residential building? Fill out the form below to add your property to Bulletin.</h4>

      <form action="/create_building" method="post" class="form-horizontal">
        <!-- Hidden input for authenticity token to protect from forgery -->
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

        <!-- Label and input for name -->
        <div class="form-group">
          <div>
            <input type="text" id="name" name="name" placeholder="Building Name" class="form-control" value="<%= @building.name %>">
          </div>
        </div>

        <!-- Label and input for address -->
        <div class="form-group">
          <div>
            <input type="text" id="address" name="address" placeholder="Address" class="form-control" value="<%= @building.address %>">
          </div>
        </div>

        <!-- Label and input for phone -->
        <div class="form-group">
          <div>
            <input type="text" id="phone" name="phone" placeholder="Phone" class="form-control" value="<%= @building.phone %>">
          </div>
        </div>

        <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">Create building</button>
        </div>
      </form>

    </div>
  </div>
</div>

