
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

    <!-- Validation failure messages -->

    <% if @building.errors.any? %>
      <% @building.errors.full_messages.each do |message| %>
        <div class="alert alert-dismissable alert-danger">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= message %>
        </div>
      <% end %>
    <% end %>

    <h2 class="text-center">Edit Building</h2>

        <form action="/update_building/<%= @building.id %>" method="post">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name">
              Name
            </label>
            <div>
              <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @building.name %>">
            </div>
          </div>

          <!-- Label and input for phone -->
          <div class="form-group">
            <label for="phone">
              Phone
            </label>
            <div>
              <input type="text" id="phone" name="phone" placeholder="Phone" class="form-control" value="<%= @building.phone %>">
            </div>
          </div>

          <!-- Label and input for address -->
          <div class="form-group">
            <label for="address">
              Address
            </label>
            <div>
              <input type="text" id="address" name="address" placeholder="Address" class="form-control" value="<%= @building.address %>">
            </div>
          </div>

          <div class="form-group">
            <div>
              <button class="btn btn-primary btn-block">
                Update Building
              </button>
            </div>
          </div>
        </form>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
