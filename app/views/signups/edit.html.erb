<!-- Validation failure messages -->

<% if @signup.errors.any? %>
  <% @signup.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Signup #<%= @signup.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_signup/<%= @signup.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for status -->
          <div class="form-group">
            <label for="status" class="col-sm-2 control-label">
              Status
            </label>
            <div class="col-sm-10">
              <input type="text" id="status" name="status" placeholder="Status" class="form-control" value="<%= @signup.status %>">
            </div>
          </div>

          <!-- Label and input for building_id -->
          <div class="form-group">
            <label for="building_id" class="col-sm-2 control-label">
              Building
            </label>
            <div class="col-sm-10">
              <input type="text" id="building_id" name="building_id" placeholder="Building" class="form-control" value="<%= @signup.building_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Signup
              </button>
              or
              <a href="/signups/<%= @signup.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
