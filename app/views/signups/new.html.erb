<!-- Validation failure messages -->

<% if @signup.errors.any? %>
  <% @signup.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">

      <h2 class="text-center">Select your building</h2>

      <form action="/create_signup" method="post" class="form-horizontal">
        <!-- Hidden input for authenticity token to protect from forgery -->
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

        <div class="form-group">
          <%= select_tag(:building_id, options_from_collection_for_select(Building.all, :id, :name, @signup.building_id), :class => "form-control") %>
        </div>

        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block">Request access</button>
        </div>
      </form>

      <h5><em>Don't see your building? <a href="/buildings/new">Click here</a> to get your building added to the Bulletin network.</em></h5>

    </div>
  </div>
</div>
