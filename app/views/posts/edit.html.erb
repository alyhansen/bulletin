
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <!-- Validation failure messages -->

      <% if @post.errors.any? %>
        <% @post.errors.full_messages.each do |message| %>
          <div class="alert alert-dismissable alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <%= message %>
          </div>
        <% end %>
      <% end %>

      <form action="/buildings/<%= @building.id %>/update_post/<%= @post.id %>" method="post" class="form-horizontal">
        <!-- Hidden input for authenticity token to protect from forgery -->
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

        <!-- Label and input for subject -->
        <div class="form-group">
          <label for="subject" class="col-sm-2 control-label">
            Subject
          </label>
          <div class="col-sm-10">
            <input type="text" id="subject" name="subject" placeholder="Subject" class="form-control" value="<%= @post.subject %>">
          </div>
        </div>

        <!-- Label and input for post_type -->
        <div class="form-group">
          <label for="content" class="col-sm-2 control-label">
            Post Type
          </label>
          <div class="col-sm-10">
            <select class="form-control" id="post_type" name="post_type" value="<%= @post.post_type %>">
              <option>Local News</option>
              <option>Event</option>
              <option>Odd Job</option>
              <option>Classified</option>
            </select>
          </div>
        </div>

        <!-- Label and input for content -->
        <div class="form-group">
          <label for="post_type" class="col-sm-2 control-label">
            Body
          </label>
          <div class="col-sm-10">
            <textarea id="content" name="content" placeholder="Content" class="form-control" rows="4"><%= @post.content %></textarea>
          </div>
        </div>

        <div class="form-group">
          <center>
            <button class="btn btn-warning">
              Update Post
            </button>
          </center>
        </div>
      </form>


    </div>
  </div>
</div>

